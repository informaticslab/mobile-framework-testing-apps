var win=Ti.UI.currentWindow;var countdown=5;var l=Ti.UI.createLabel({text:'Android Notification test in ',width:'auto',height:'auto'});win.add(l);var n=Ti.UI.createNotification({message:"Howdy folks"});n.duration=Ti.UI.NOTIFICATION_DURATION_LONG;n.offsetX=100;n.offsetY=75;var countdownSeconds=setInterval(function(){l.text=l.text+countdown+"..";countdown=countdown-1;if(countdown<0){clearInterval(countdownSeconds);n.show();}},1000);