var url='http://rss.cnn.com/services/podcasting/newscast/rss.xml';Ti.include('strip_tags.js');var data;var i=0;var feedTableView;var feedTitle='';Ti.UI.currentWindow.barColor='#b40000';var stream=Ti.Media.createAudioPlayer();var item_window=Ti.UI.createView({backgroundColor:'#b40000',borderRadius:8,right:5,left:5,height:100,bottom:5});Ti.UI.currentWindow.add(item_window);var item_title_label=Ti.UI.createLabel({text:'',color:'#fff',textAlign:'center',left:10,right:10,top:5,height:45,font:{fontFamily:'Helvetica Neue',fontWeight:'bold',fontSize:18}});item_window.add(item_title_label);var item_desc_label=Ti.UI.createLabel({text:'',color:'#000',textAlign:'center',left:10,right:10,top:55,height:40,font:{fontFamily:'Helvetica Neue',fontWeight:'bold',fontSize:13}});item_window.add(item_desc_label);function displayItems(itemList){for(var c=0;c<itemList.length;c++){var title=null;var desc=null;var mp3_url=null;if(itemList.item(c).getElementsByTagName("enclosure")!=null){title=itemList.item(c).getElementsByTagName("title").item(0).text;desc=itemList.item(c).getElementsByTagName("description").item(0).text;title=title.replace(/\n/gi," ");desc=desc.replace(/\n/gi," ");mp3_url=itemList.item(c).getElementsByTagName("enclosure").item(0).getAttribute("url");var row=Ti.UI.createTableViewRow({height:'auto',backgroundColor:'#eeeeee',selectedBackgroundColor:'#b40000'});var post_title=Ti.UI.createLabel({text:title,color:'#000',textAlign:'left',left:60,height:'auto',width:'auto',top:3,font:{fontWeight:'bold',fontSize:16}});row.add(post_title);var item_image=Ti.UI.createImageView({image:'http://i.cdn.turner.com/cnn/.element/img/3.0/global/header/hdr-main.gif',left:3,top:2,width:50,height:34});row.add(item_image);row.thisTitle=title;row.thisMp3=mp3_url;row.thisDesc=desc;data[i]=row;i++;}}
feedTableView=Ti.UI.createTableView({data:data,top:0,width:320,height:260});Ti.UI.currentWindow.add(feedTableView);feedTableView.addEventListener('click',function(e){Ti.API.info('item index clicked :'+e.index);Ti.API.info('title  :'+e.rowData.thisTitle);Ti.API.info('description  :'+strip_tags(e.rowData.thisDesc));Ti.API.info('mp3 enclosure  :'+e.rowData.thisMp3);item_title_label.text=strip_tags(e.rowData.thisTitle);item_desc_label.text=strip_tags(e.rowData.thisDesc);stream.stop();stream.url=e.rowData.thisMp3;stream.start();});}
function loadRSSFeed(url){data=[];Ti.API.info('>>>> loading RSS feed '+url);xhr=Ti.Network.createHTTPClient();xhr.open('GET',url);xhr.onload=function()
{Ti.API.info('>>> got the feed! ... ');var xml=this.responseXML;var channel=xml.documentElement.getElementsByTagName("channel");feedTitle=channel.item(0).getElementsByTagName("title").item(0).text;Ti.API.info("FEED TITLE "+feedTitle);Ti.UI.currentWindow.title=feedTitle;var itemList=xml.documentElement.getElementsByTagName("item");Ti.API.info('found '+itemList.length+' items in the RSS feed');item_title_label.text='DONE';item_desc_label.text='click a feed item';displayItems(itemList);};item_title_label.text='LOADING RSS FEED..';item_desc_label.text='';xhr.send();}
var r=Ti.UI.createButton({systemButton:Ti.UI.iPhone.SystemButton.REFRESH});r.addEventListener('click',function()
{loadRSSFeed(url);});Ti.UI.currentWindow.setRightNavButton(r);loadRSSFeed(url);