var win=Ti.UI.currentWindow;var _WhenStillImgs=[];var _WhenMovingImgs=[];_WhenStillImgs.push('../images/Kicking00.png');_WhenStillImgs.push('../images/Kicking20.png');_WhenMovingImgs.push('../images/Kicking00.png');_WhenMovingImgs.push('../images/Kicking14.png');var cartoonGuy=Ti.UI.createImageView({height:200,width:200,images:_WhenStillImgs,duration:100,repeatCount:0,top:30});win.add(cartoonGuy);cartoonGuy.start();cartoonGuy.addEventListener('touchstart',function(e)
{Ti.API.info('I WAS CLICKED');cartoonGuy.stop();cartoonGuy.images=_WhenMovingImgs;cartoonGuy.start();});