Ti.API.info("hello from a background service");var notification=Ti.App.iOS.scheduleLocalNotification({alertBody:"Kitchen Sink was put in background",alertAction:"Re-Launch!",userInfo:{"hello":"world"},sound:"pop.caf",date:new Date(new Date().getTime()+3000)});Ti.App.iOS.addEventListener('notification',function(){Ti.API.info('background event received = '+notification);Ti.App.currentService.unregister();});Ti.App.currentService.addEventListener('stop',function()
{Ti.API.info("background service is stopped");});Ti.App.currentService.stop();